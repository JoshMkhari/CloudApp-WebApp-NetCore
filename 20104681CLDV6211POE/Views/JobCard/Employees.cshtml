@model IEnumerable<_20104681CLDV6211POE.Models.JobCardData>
@{
    ViewData["Title"] = "AssignEmployees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div id="main">
        <div class="head">
            <div class="col-div-6">
                <span style="font-size:30px;cursor:pointer; color: white;" class="nav">&#9776; Assign Employees</span> @*When extended*@
            <span style="font-size:30px;cursor:pointer; color: white;" class="nav2">&#9776; Assign Employees</span>@*When reclined*@
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    @**For the display of the employee info*@
    <div class="card">
        <nav class="navbar navbar-light bg-light justify-content-between">
            <a asp-action="Create" class="fa fa-plus"> Add new Employee</a>
        </nav>
        <div class="card-body">

            <table class="table table-hover">
                <thread>
                    <tr>
                        <th><h5 style="color:black">Number</h5></th>
                        <th><h5 style="color:black">Name</h5></th>
                        <th><h5 style="color:black">Surname</h5></th>
                        <th><h5 style="color:black">Add to job card</h5></th>
                    </tr>
                </thread>
                <tbody>
                    @foreach (var job in Model)
                    {
                    <tr>
                        <td style="color:black">@Html.DisplayFor(modelItem => job.EmployeeNo)</td>
                        <td style="color:black">@Html.DisplayFor(modelItem => job.EmployeeName)</td>
                        <td style="color:black">@Html.DisplayFor(modelItem => job.EmployeeSurname)</td>
                        <td>
                            <a asp-action="AddToJob" asp-route-id="@job.EmployeeNo.ToString()" class="fa fa-wrench">Add to job card</a>
                        </td>
                    </tr>

                    }

                </tbody>

            </table>
        </div>
    </div>

</body>
