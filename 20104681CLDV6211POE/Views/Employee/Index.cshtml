@model IEnumerable<_20104681CLDV6211POE.Models.EmployeeData>
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div id="main">
        <div class="head">
            <div class="col-div-6">
                <span style="font-size:30px;cursor:pointer; color: white;" class="nav">&#9776; Employee</span> @*When extended*@
            <span style="font-size:30px;cursor:pointer; color: white;" class="nav2">&#9776; Employee</span>@*When reclined*@
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    @**For the display of the employee info*@
    <div class="card">
        <nav class="navbar navbar-light bg-light justify-content-between">
            <a asp-action="Create" class="fa fa-plus"> Add new Employee</a>
        </nav>
        <div class="card-body">
            <table class="table table-hover">
                <thread>
                    <tr>
                        <th><h5 style="color:black">Number</h5></th>
                        <th><h5 style="color:black">Name</h5></th>
                        <th><h5 style="color:black">Surname</h5></th>
                        <th><h5 style="color:black">Manage</h5></th>
                    </tr>
                </thread>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td style="color:black">@Html.DisplayFor(modelItem => emp.EmployeeNo)</td>
                            <td style="color:black">@Html.DisplayFor(modelItem => emp.EmployeeName)</td>
                            <td style="color:black">@Html.DisplayFor(modelItem => emp.EmployeeSurname)</td>
                            <td>
                                <a asp-action="AddToJob" asp-route-id="@emp.EmployeeNo.ToString()" class="fa fa-wrench" >Add to job card</a>
                                <a asp-action="Edit" asp-route-id="@emp.EmployeeNo.ToString()" class="fa fa-wrench" style="color:green">Edit</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>

</body>
